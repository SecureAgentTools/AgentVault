# Environment Variables for AgentVault Registry API
# Copy this file to .env and fill in your actual values

# --- Database Connection ---
DATABASE_URL="postgresql+asyncpg://postgres:your-password-here@localhost:5432/agentvault_dev"

# --- Security ---
# A strong, randomly generated secret key. Replace this placeholder for production!
# Example generated using: openssl rand -hex 32
API_KEY_SECRET="your-secure-api-key-secret-here"

# --- CORS ---
# Defaulting to allow all for development (via config.py). Restrict in production.
# Example: ALLOWED_ORIGINS='["http://localhost:3000", "https://your-frontend.com"]'

# --- Logging ---
# Log level (e.g., DEBUG, INFO, WARNING, ERROR, CRITICAL) - Defaults to INFO in config.py
# LOG_LEVEL=DEBUG

# --- Email Configuration ---
MAIL_SERVER=your-smtp-server.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-secure-mail-password
MAIL_FROM=your-email@example.com
MAIL_STARTTLS=True  # Use STARTTLS on port 587
MAIL_SSL_TLS=False  # Mutually exclusive with STARTTLS
MAIL_FROM_NAME="AgentVault Registry"