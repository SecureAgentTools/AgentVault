{
  "schemaVersion": "1.0",
  "humanReadableId": "local-poc/ecommerce-trend-analysis",
  "agentVersion": "0.1.0",
  "name": "Trend Analysis Agent",
  "description": "Identifies trending products or categories based on sales data or external sources.",
  "url": "http://localhost:8022/a2a",
  "provider": {
    "name": "AgentVault E-commerce Demo"
  },
  "capabilities": {
    "a2aVersion": "1.0",
    "supportedMessageParts": ["data"]
  },
  "authSchemes": [
    {
      "scheme": "none",
      "description": "No authentication required for this agent."
    }
  ],
  "skills": [
    {
      "id": "trend_analysis",
      "name": "Trend Analysis",
      "description": "Analyzes data to identify current trends.",
      "input_schema": {
        "type": "object",
        "properties": {
          "timeframe": {
            "type": "string",
            "description": "Timeframe for analysis (e.g., '24h', '7d', '30d').",
            "default": "7d"
          },
          "category": {
            "type": "string",
            "description": "Optional category to limit trend analysis.",
            "nullable": true
          },
           "limit": {
             "type": "integer",
             "description": "Maximum number of trending items to return.",
             "default": 10
           }
        },
        "required": []
      },
      "output_schema": {
        "$ref": "#/components/schemas/TrendingDataArtifact"
      }
    }
  ],
  "tags": ["ecommerce", "trends", "analysis", "data", "poc"],
  "components": {
    "schemas": {
      "TrendingData": {
        "type": "object",
        "properties": {
          "timeframe": {"type": "string"},
          "trending_products": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List of trending product IDs."
          },
          "trending_categories": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List of trending category names."
          }
        },
        "required": ["timeframe"]
      },
      "TrendingDataArtifact": {
         "type": "object",
         "properties": {
             "trending_data": { "$ref": "#/components/schemas/TrendingData" }
         },
         "required": ["trending_data"]
      }
    }
  }
}
