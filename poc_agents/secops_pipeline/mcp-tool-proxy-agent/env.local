# Alternative local .env file for direct connection to registry
PORT=8069
LOG_LEVEL=DEBUG

# Override to use a specific registry URL
AGENTVAULT_REGISTRY_URL=http://registry:8000

# Mapping of SecOps tool logical IDs to internal MCP server URLs
# These mock IDs and URLs use service names instead of hard-coded IPs
MCP_SERVER_MAP='{"tip_virustotal": "http://secops-threat-intel:8101", "tip_abuseipdb": "http://secops-threat-intel:8101", "network_firewall_main": "http://secops-firewall:8102", "endpoint_detection_response_edr": "http://secops-edr:8103", "ticketing_system_jira": "http://secops-ticketing:8104"}'

# Optional: Timeout for calls to downstream MCP servers (in seconds)
MCP_CALL_TIMEOUT=30.0
