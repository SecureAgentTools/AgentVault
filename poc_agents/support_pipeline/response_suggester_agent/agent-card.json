{
  "schemaVersion": "1.0",
  "humanReadableId": "local-poc/support-response-suggester",
  "agentVersion": "0.1.0",
  "name": "Response Suggestion Agent",
  "description": "Generates a draft support response based on ticket analysis, KB articles, and customer history.",
  "url": "http://localhost:8033/a2a",
  "provider": {
    "name": "AgentVault Support Demo"
  },
  "capabilities": {
    "a2aVersion": "1.0",
    "supportedMessageParts": ["data"]
  },
  "authSchemes": [
    {
      "scheme": "none",
      "description": "No authentication required for this agent."
    }
  ],
  "skills": [
    {
      "id": "suggest_draft_response",
      "name": "Suggest Draft Response",
      "description": "Generates a draft response using ticket context and LLM.",
      "input_schema": {
        "type": "object",
        "properties": {
          "ticket_analysis": {
            "$ref": "#/components/schemas/TicketAnalysis"
          },
          "kb_results": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/KnowledgeBaseArticle" },
            "description": "List of relevant KB articles (can be empty)."
          },
          "customer_history": {
            "$ref": "#/components/schemas/CustomerHistorySummary",
            "nullable": true,
            "description": "Customer history summary (can be null)."
          }
        },
        "required": ["ticket_analysis"]
      },
      "output_schema": {
        "$ref": "#/components/schemas/SuggestedResponseArtifact"
      }
    }
  ],
  "tags": ["support", "response", "generation", "llm", "poc"],
  "components": {
    "schemas": {
      "TicketAnalysis": {
        "type": "object",
        "properties": {
          "summary": {"type": "string"},
          "category": {"type": "string"},
          "sentiment": {"type": "string"},
          "extracted_entities": {
            "type": "object",
            "additionalProperties": {"type": "array", "items": {"type": "string"}}
          }
        },
        "required": ["summary", "category", "sentiment", "extracted_entities"]
      },
      "KnowledgeBaseArticle": {
        "type": "object",
        "properties": {
          "article_id": {"type": "string"},
          "title": {"type": "string"},
          "summary": {"type": "string"},
          "relevance_score": {"type": "number", "format": "float", "nullable": true}
        },
        "required": ["article_id", "title", "summary"]
      },
      "CustomerHistorySummary": {
        "type": "object",
        "properties": {
          "customer_identifier": {"type": "string"},
          "status": {"type": "string"},
          "recent_interaction_summary": {"type": "string", "nullable": true},
          "open_tickets": {"type": "integer", "nullable": true}
        },
        "required": ["customer_identifier", "status"]
      },
      "SuggestedResponseArtifact": {
         "type": "object",
         "properties": {
             "suggested_response": {
                 "type": "string",
                 "description": "The suggested draft response text."
              }
         },
         "required": ["suggested_response"]
      }
    }
  }
}
